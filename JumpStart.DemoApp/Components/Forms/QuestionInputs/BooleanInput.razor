@inherits QuestionInputBase

<div class="form-check">
    <input type="radio" 
           class="form-check-input" 
           name="bool_@Question.Id" 
           value="true"
           @onchange="@(e => OnTextAnswerChanged.InvokeAsync("true"))"
           required="@Question.IsRequired" />
    <label class="form-check-label">Yes</label>
</div>
<div class="form-check">
    <input type="radio" 
           class="form-check-input" 
           name="bool_@Question.Id" 
           value="false"
           @onchange="@(e => OnTextAnswerChanged.InvokeAsync("false"))"
           required="@Question.IsRequired" />
    <label class="form-check-label">No</label>
</div>

@code {
    // Inherits all functionality from QuestionInputBase
}
