@page "/products"
@using JumpStart.DemoApp.Clients
@using JumpStart.DemoApp.DTOs
@using JumpStart.Api.Clients.Advanced
@using JumpStart.Repositories
@inject IProductApiClient ProductClient
@rendermode InteractiveServer

<PageTitle>Products</PageTitle>

<h1>Product Management</h1>

@if (loading)
{
    <p><em>Loading...</em></p>
}
else if (products != null)
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="CreateProduct">Create New Product</button>
        <button class="btn btn-secondary" @onclick="LoadLowStock">Show Low Stock</button>
        <button class="btn btn-info" @onclick="LoadActive">Show Active</button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>SKU</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>@product.SKU</td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => EditProduct(product)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (pagedResult != null)
    {
        <div class="pagination-info">
            <p>Page @pagedResult.PageNumber of @Math.Ceiling((double)pagedResult.TotalCount / pagedResult.PageSize)</p>
            <p>Total items: @pagedResult.TotalCount</p>
        </div>
    }
}

@code {
    private List<ProductDto>? products;
    private PagedResult<ProductDto>? pagedResult;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        loading = true;
        try
        {
            // Call API client with simple query options (no generic type parameter)
            var options = new QueryOptions
            {
                PageNumber = 1,
                PageSize = 20
            };

            pagedResult = await ProductClient.GetAllAsync(options);
            products = pagedResult.Items.ToList();
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadLowStock()
    {
        loading = true;
        try
        {
            var lowStockProducts = await ProductClient.GetLowStockAsync(10);
            products = lowStockProducts.ToList();
            pagedResult = null; // Clear paging when filtering
        }
        finally
        {
            loading = false;
        }
    }

    private async Task LoadActive()
    {
        loading = true;
        try
        {
            var activeProducts = await ProductClient.GetActiveAsync();
            products = activeProducts.ToList();
            pagedResult = null; // Clear paging when filtering
        }
        finally
        {
            loading = false;
        }
    }

    private void CreateProduct()
    {
        // Navigate to create page or show modal
        // For now, just a placeholder
    }

    private void EditProduct(ProductDto product)
    {
        // Navigate to edit page or show modal
        // For now, just a placeholder
    }

    private async Task DeleteProduct(Guid id)
    {
        if (await ProductClient.DeleteAsync(id))
        {
            await LoadProducts();
        }
    }
}
